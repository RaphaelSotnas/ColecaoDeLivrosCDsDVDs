@model ColecaoLivrosCDsDVDs.Models.Entidades.CD

@{
    ViewData["Title"] = "PaginaExcluirCd";
}

<h1>PaginaExcluirCd</h1>

<h3>Tem certeza que gostaria de excluir esse contato?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GeneroMusical)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GeneroMusical)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="ExcluirCd">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="ListarCds">Voltar</a>
    </form>
</div>
