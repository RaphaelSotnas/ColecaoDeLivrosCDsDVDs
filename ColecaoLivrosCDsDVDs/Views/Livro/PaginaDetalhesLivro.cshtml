@model ColecaoLivrosCDsDVDs.Models.Entidades.Livro

@{
    ViewData["Title"] = "PaginaDetalhesLivro";
}

<h1>Detalhes do livro</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="PaginaEditarLivro" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="ListarLivros">Voltar</a>
</div>

@{
    if (Model.Status == ColecaoLivrosCDsDVDs.Enum.Status.Disponivel)
    {
        <form method="post" asp-controller="Usuario" asp-action="PaginaCadastrarUsuario">
            <input type="submit" value="Pegar Emprestado" />
            <input type="hidden" value="@Html.DisplayFor(model => model.Id)" name="idLivro" />
        </form>
    }
    else
    {
        <div>
            <form method="post" asp-controller="Usuario" asp-action="DetalharUsuario">
                <input type="submit" value="Detalhes do usuário do livro" />
                <input type="hidden" value="@Html.DisplayFor(model => model.Id)" name="idLivro" />
            </form>
        </div>
    }
}