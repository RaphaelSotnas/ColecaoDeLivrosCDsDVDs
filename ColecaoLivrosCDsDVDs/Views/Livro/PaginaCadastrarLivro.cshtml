@model ColecaoLivrosCDsDVDs.Models.Entidades.Livro

@{
    ViewData["Title"] = "PaginaCadastrarLivro";
}

<h1>Cadastrar Livro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarLivro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <select asp-for="Genero" class="form-control">
                    <option>Drama</option>
                    <option>Romance</option>
                    <option>Terror</option>
                    <option>Comedia</option>
                    <option>Ficçao</option>
                </select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListarLivros">Voltar</a>
</div>

